# http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.css]
indent_style = tab
indent_size = 4

[*.{htm,html}]
indent_style = tab
indent_size = 4

[*.{js,jsx}]
indent_style = tab
indent_size = 4

[*.json]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.svg]
indent_style = tab
indent_size = 4

[*.{ts,tsx}]
indent_style = tab
indent_size = 4

[*.yml]
indent_style = space
indent_size = 2
